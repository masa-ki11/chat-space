.chat-main__message-list__info{data: {message: {id: message.id}}}
  .chat-main__message-list__name
    .name
      = message.user.name
    .date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__text
    - if message.body.present?
      %p.Message__content
        = message.body
    = image_tag message.image.url, class: 'Message__image' if message.image.present?